        <record id="rocker_hour_bank_unpaid_tree" model="ir.ui.view">
            <field name="name">rocker.leave.type</field>
            <field name="model">hr.leave.type</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <!--                <tree string="Leave types" create="false" delete="false" edit="true">-->
                <tree string="Leave types" editable="top" create="false" delete="false" import="false">
<!--                <tree string="Leave types" create="false" delete="false" import="false">-->

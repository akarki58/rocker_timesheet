                    <field name="name" readonly="1"/>
                    <field name="unpaid" readonly="0"/>
                </tree>
            </field>
        </record>

        <record id="act_rocker_leave_type" model="ir.actions.act_window">
            <field name="name">Edit Leave types</field>
            <field name="res_model">hr.leave.type</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="rocker_hour_bank_unpaid_tree"/>
